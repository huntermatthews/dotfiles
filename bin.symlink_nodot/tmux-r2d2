#!/bin/sh

# Remember - all index are from 1 not zero...

SESS_NAME=r2d2

cd ~/ws/glacierr2d2startup
 
tmux start-server
tmux new-session -d -s $SESS_NAME -n emacs
tmux new-window -t $SESS_NAME:2 -n shell
tmux new-window -t $SESS_NAME:3 -n docs
tmux new-window -t $SESS_NAME:4 -n utility
tmux new-window -t $SESS_NAME:5 -n test

tmux send-keys -t $SESS_NAME:1 'cd src/GlacierR2D2Startup ; e lib/r2d2/startup/glacier_disk_util.py test/startup/test/test_glacier_startup.py ' C-m
tmux send-keys -t $SESS_NAME:2 'cd src/GlacierR2D2Startup/lib/r2d2/system ' C-m
tmux send-keys -t $SESS_NAME:3 'which e' C-m

tmux new-session -d -s ${SESS_NAME}-2 -t ${SESS_NAME}
  
tmux select-window -t $SESS_NAME:1
tmux attach-session -d -t $SESS_NAME
