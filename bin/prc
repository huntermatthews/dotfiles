#! /usr/bin/env bash

# NOTE: that any additional arguments to this script will be passed to post-review as-is.

# redefine this for your review groups
default_groups="Glacier"

# Get first line of the most recent git commit
first_line=$(git log --pretty="format:%s" -n 1)

# Get the name of the brazil package
# In case we are in some symlinked location, canonicalize/de-symlinkify our path for brazil-path
package=$(cd $(pwd -P) ; brazil-path pkg.name)

post-review --summary="[${package}] ${first_line}" --note --target-groups=${default_groups} "$@"

## END OF LINE ##
