#! /bin/bash

DEFAULT_KEY=fb_id_rsa.pub


usage() {
    echo "Copy an ssh key to a remote host, putting it in the authorized_keys file"
    echo "Will make a .ssh and fix up perms for you"
    echo "usage: $(basename $0) [-k | --key SSH_KEY ] [-h | --help] host1 [host...]"
}

if [ $# -ne 1 -a $# -ne 3 ] ; then
    usage
    exit 1 
fi

if [ $1 = "-h" -o $1 = "--help" ] ; then
    usage
    exit 0 
fi

if [ $1 = "-k" -o $1 = "--key" ] ; then
   KEY=$2
   shift 2
else
   KEY=$DEFAULT_KEY
fi

for host in $* ; do 
    cat ~/.ssh/$KEY | ssh $host 'mkdir -p ~/.ssh ; chmod go-rwx .ssh ; cat >> ~/.ssh/authorized_keys'
done

## END OF LINE ##

