__check_kinit () {
        if touch ~/.envimprovement/kinit-now 2> /dev/null && [ ~/.envimprovement/kinit-now -nt ~/.envimprovement/kinit ]
        then
                touch -d "+1 hour" ~/.envimprovement/kinit
                if ! klist -s
                then
                        echo "Your kerberos ticket has expired - please run kinit -f"
                fi
        fi
}

